<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal da aplicação Loja Social -->
    <style name="Theme.Loja_social" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Cores principais -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fundo e texto -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Sem ActionBar padrão -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Personalizações adicionais -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- MELHORIAS: Tamanhos de fonte maiores para melhor legibilidade -->
        <item name="android:textSize">20sp</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1.Large</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2.Large</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3.Large</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4.Large</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline5.Large</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6.Large</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1.Large</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2.Large</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button.Large</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption.Large</item>
    </style>

    <!-- Estilos de texto maiores -->
    <style name="TextAppearance.Headline1.Large" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Headline2.Large" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.Headline3.Large" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextAppearance.Headline4.Large" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline5.Large" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Headline6.Large" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Body1.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Body2.Large" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Button.Large" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Caption.Large" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
    </style>
</resources>