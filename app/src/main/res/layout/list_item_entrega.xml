<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:minHeight="80dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_delivery"
                    android:tint="@color/colorPrimaryDark"
                    android:padding="12dp"
                    android:contentDescription="Entrega"
                    android:scaleType="fitCenter" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_beneficiario_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/card_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_estado_concluido"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="12dp"
                tools:text="Maria Pereira (a54321)" />

            <TextView
                android:id="@+id/tv_data_agendamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="@id/tv_beneficiario_nome"
                app:layout_constraintTop_toBottomOf="@id/tv_beneficiario_nome"
                app:layout_constraintEnd_toEndOf="@id/tv_beneficiario_nome"
                tools:text="Agendada para 01/12/2025 | Colab: Admin" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_concluir"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concluir"
                android:textSize="12sp"
                app:icon="@drawable/ic_delivery"
                app:iconSize="18dp"
                app:iconTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_estado_concluido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTREGUE"
                android:textSize="12sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@android:color/holo_green_dark"
                app:chipStrokeWidth="0dp"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="24dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>