<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Loja_social" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Cores principais (modo escuro) -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fundo e texto -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Sem ActionBar padrão -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Navegação -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <!-- MELHORIAS: Tamanhos de fonte maiores para melhor legibilidade -->
        <item name="android:textSize">20sp</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1.Large</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2.Large</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3.Large</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4.Large</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline5.Large</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6.Large</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1.Large</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2.Large</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button.Large</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption.Large</item>
    </style>
</resources>
